    {
      "env": {
        "COMPONENT": "api"
      },
      "name": "API",
      "type": "python",
      "request": "launch",
      "console": "internalConsole",
      "module": "gunicorn.app.wsgiapp",
      "args": [
        "mcod.api:app",
        "--workers",
        "1",
        "--bind",
        "0.0.0.0:8000",
        "--reload",
        "--worker-class",
        "sync",
        "--timeout",
        "7200"
      ],
      "justMyCode": false
    },
